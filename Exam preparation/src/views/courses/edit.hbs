<section id="edit-container">
            <div class="edit-container-info">
                <h1>Edit Course</h1>
                <form method="post">
                    <label>Title:</label>
                    <input name="" type="text" id="title" value="{{title}}">

                    <label>Type:</label>
                    <input name="" type="text" id="type" value="{{type}}">

                    <label>Certificate:</label>
                    <input name="" type="text" id="certificate" value="{{certificate}}">

                    <label>Image:</label>
                    <input name="" type="text" id="image" placeholder="http://..." value="{{image}}">

                    <label>Description:</label>
                    <textarea id="content" name="description">{{description}}</textarea>

                    <label>Price:</label>
                    <input name="price" type="number" id="price" value="{{price}}">

                    <input type="submit" id="btn" value="Edit">
                </form>
            </div>
        </section>
    